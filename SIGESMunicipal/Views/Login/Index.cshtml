<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 
        Municipal</title>
   <!-- CSS only -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIGEFMunicipal.styles.css" asp-append-version="true" />
</head>

<div class="sidenav" style="height:100%">
    <img src="~/Resources/logo.png" style="    width: 100%;
    height: 65%;
    position: absolute;
    top: 0%;
    left: 0%;">
         <div class="login-main-text" style="position: absolute;
    top: 35%;">
            <h2>Bienvenido<br></h2>
            <p>Loguearse al SIGEF Municipal</p>
         </div>
      </div>
      <div class="main">
         <div class="col-12">
            <div class="login-form card shadow">
           
                  <div class="form-group">
                     <label>User Name</label>
                     <input type="text" class="form-control" placeholder="User Name">
                  </div>
                  <div class="form-group">
                     <label>Password</label>
                     <input type="password" class="form-control" placeholder="Password">
                  </div>
                  <button onclick="location.href='@Url.Action("Index", "Home")'"  class="btn btn-black mt-3">Login</button>
                  <button class="btn btn-secondary mt-3">Register</button>
         
            </div>
         </div>
      </div>
